<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="styles.css">
  <title>Notes</title>
  
</head>
<%- include('include/navbar') %>
<style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background-color: #f4f4f4;
    }

    .notes-container {
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      padding: 20px;
      border-radius: 5px;
      width: 600px;
      margin: 20px auto;
      text-align: center;
    }

    .notes-heading {
      color: #333;
    }

    .notes-list {
      list-style-type: none;
      padding: 0;
    }

    .note-item {
      margin-bottom: 20px;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
      background-color: #fff;
    }

    .note-title {
      color: #333;
      margin-bottom: 10px;
    }

    .note-body {
      color: #666;
    }

    .no-notes-message {
      color: #888;
    }
    a {
  text-decoration: none !important;
}
  </style>
<body>
  <div class="notes-container">
    <h2 class="notes-heading">My Notes</h2>

    <% if (notes.length > 0) { %>
      <ul class="notes-list">
        <% notes.forEach(note => { %>
            <a href="/notes/edit/<%= note.id %>"> <div class="note-item">
                <h3 class="note-title"><%= note.title %></h3>
                <p class="note-body"><%= note.notebody %></p>
              </div></a>
         
        <% }); %>
      </ul>
    <% } else { %>
      <p class="no-notes-message">No notes available.</p>
    <% } %>

  </div>
</body>
</html>
